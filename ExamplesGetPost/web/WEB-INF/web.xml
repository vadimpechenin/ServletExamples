<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Examples of get post servlet</display-name>
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.getpost.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/color</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddCookieServlet</servlet-name>
        <servlet-class>com.getpost.AddCookieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCookieServlet</servlet-name>
        <url-pattern>/addcookie</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetCookiesServlet</servlet-name>
        <servlet-class>com.getpost.GetCookiesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCookiesServlet</servlet-name>
        <url-pattern>/getcookies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DateServlet</servlet-name>
        <servlet-class>com.getpost.DateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DateServlet</servlet-name>
        <url-pattern>/date</url-pattern>
    </servlet-mapping>
</web-app>